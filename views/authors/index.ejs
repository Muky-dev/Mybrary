<div class="card">
	<div class="card-body">
		<h2>Search Authors</h2>
		<form action="/authors" method="GET">
			<label>Name: </label>
			<input type="text" name="name" value="<%= searchOptions.name %>">
			<br>
			<button class="btn btn-success mt-4" type="submit">Search</button>
		</form>
		<br>
		<% authors.forEach(author => { %>
		<div><%= author.name %></div>
		<% }) %>
	</div>
</div>